{
  "$schema": "https://json.schemastore.org/tsconfig",

  "include": [
    "src/**/*.ts"
  ],

  "exclude": [
    "src/**/test/*",
  ],

  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["ES2020"],
    "module": "commonjs",
    "target": "es2020",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
  },
}

